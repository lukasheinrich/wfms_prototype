#!/bin/sh

datadir="$${PWD}/work_$(date '+%s')"
mkdir $datadir

docker run --pid=host --rm -v $$datadir:/data -v $$PWD/configmap:/wlcg $stagein_image  sh -c 'LOGFILE=/data/step1.log PIDFILE=/data/step1.pid WAITFORFILE=/data/_wlcg_done_0.txt TOMBSTTONEFILE=/data/_wlcg_done_1.txt /wlcg/wrapper.sh /wlcg/step1.sh'  &
docker run --pid=host --rm -v $$datadir:/data -v $$PWD/configmap:/wlcg $payload_image  sh -c 'LOGFILE=/data/step2.log PIDFILE=/data/step2.pid WAITFORFILE=/data/_wlcg_done_1.txt TOMBSTTONEFILE=/data/_wlcg_done_2.txt /wlcg/wrapper.sh /wlcg/step2.sh'  &
docker run --pid=host --rm -v $$datadir:/data -v $$PWD/configmap:/wlcg $stageout_image sh -c 'LOGFILE=/data/step3.log PIDFILE=/data/step3.pid WAITFORFILE=/data/_wlcg_done_2.txt TOMBSTTONEFILE=/data/_wlcg_done_3.txt /wlcg/wrapper.sh /wlcg/step3.sh'  &
docker run --pid=host --rm -v $$datadir:/data -v $$PWD/configmap:/wlcg $sidecar_image  sh -c '/wlcg/sidecar.sh 2>&1 | tee /data/sidecar.log'  &

jobs -p > pids.txt
wait < pids.txt
rm pids.txt